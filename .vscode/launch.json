{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Node Express",
            "program": "${workspaceFolder}/sample/js/app.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "sample.python.main:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}